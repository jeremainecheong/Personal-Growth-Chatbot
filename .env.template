# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/personal_growth_bot_db

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4  # Options: gpt-4, gpt-3.5-turbo

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
MAX_MESSAGE_LENGTH=4096  # Telegram's max message length
DAILY_REFLECTION_TIME=21:00  # Time for daily reflection reminder (24h format)

# Application Configuration
MAX_SITUATIONS_HISTORY=50  # Maximum number of situations to keep in history
MAX_JOURNAL_ENTRIES=100   # Maximum number of journal entries to keep
ANALYSIS_WINDOW_DAYS=30   # Number of days to analyze for patterns

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/bot.log
